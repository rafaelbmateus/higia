<div class="ibox-content animated fadeInRightBig">


<div class="controls">
  <div class="button -purple new-medicine">Adicionar Remédio</div>
</div>

  <table class="table table-striped table-bordered table-hover datatable">
    <thead>
      <tr>
        <th>Medicamento</th>
        <th>Médico</th>
        <th>Dosagem</th>
        <th width="1%"></th>
      </tr>
    </thead>
    <tbody>
      <% @doctor_prescriptions.each do |doctor_prescription| %>
        <tr>
          <td><%= doctor_prescription.medicine.name %></td>
          <td><%= doctor_prescription.doctor.name %></td>
          <td><%= doctor_prescription.dosage %></td>
          <td align="center">
            <%= render 'shared/btn_single', link_to: doctor_prescription %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="button -purple">Iniciar tratamento</div>
  <div class="button -grey">Configurar Notificações</div>

  <table class="treatment">
    <thead>
     <tr>
        <th>Dose</th>
        <th>Dia</th>
        <th width="100">Tomou a dose?</th>
     </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Dose 01
        </td>
        <td>
          Dia 01
        </td>
        <td>
          <input type="checkbox">
        </td>
      </tr>

      <tr>
        <td>
          Dose 02
        </td>
        <td>
          Dia 01
        </td>
        <td>
          <input type="checkbox">
        </td>
      </tr>

    </tbody>
  </table>

  <table class="treatment">
  <thead>
     <tr>
        <th></th>
        <th></th>
        <th width="100"></th>
     </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          Dose 01
        </td>
        <td>
          Dia 02
        </td>
        <td>
          <input type="checkbox">
        </td>
      </tr>

      <tr>
        <td>
          Dose 02
        </td>
        <td>
          Dia 02
        </td>
        <td>
          <input type="checkbox">
        </td>
      </tr>

    </tbody>
  </table>

  <%= render 'shared/datatable', name: 'Medicamentos' %>
</div>